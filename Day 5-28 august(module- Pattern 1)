import java.util.*;
public class Basics{

  public static void Patterntype1(int n){
      for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
          System.out.print("*");
        }
        System.out.println();
      }
  }
  public static void main(String args[]){
      Scanner sc=new Scanner(System.in);
      System.out.println("Enter range");
      int n=sc.nextInt();
      Patterntype1(n);
  }
}


