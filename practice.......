print series of 3n+2 and not multiple of 4


import java.util.*;
public class Basics{

  public static void main(String args[]){
  Scanner sc=new Scanner(System.in);
  int n = sc.nextInt();
  for(int i=1; i<n; i++)
  {
    int calculate =(3*i)+2;
    if(calculate%4 != 0){
        System.out.print(calculate +" ");
    }
    else
    {
      continue;
    }
    
  }
}
}

