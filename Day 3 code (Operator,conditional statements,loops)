public class Basics{

  public static void main(String args[]){
   
int a=9;
double b=5.0;
double c=a/b;
System.out.println(c);
System.out.println(10+5);
System.out.println(10-5);
System.out.println(10*5);
System.out.println(10/5);
System.out.println(10%5);
System.out.println(10*8+5-3);
}
}                             
                          output -
        1.8
        15
        5
        50
        2
        0
        82

----------------------------------------------------------------------------------------
x++ - Old value use and then value change

public class Basics{
public static void main(String args[]){
   
int x=10;
int y=20;
System.out.println(x++);
}
}                   output-10

-------------------------------------------------------------------------------------
++x- Value change and then value use

public class Basics{
public static void main(String args[]){
   
int x=10;
int y=20;
System.out.println(++x);
}
}                  Output-11

-------------------------------------------------------------------------------------
--y =value change and use

public class Basics{
public static void main(String args[]){
   
int x=10;
int y=20;
System.out.println(--y);
}
}                Output-19

-------------------------------------------------------------------------------------
y-- = Value use and then change

public class Basics{
public static void main(String args[]){
   
int x=10;
int y=20;
System.out.println(y--);
}
}              Output-20

-------------------------------------------------------------------------------------

public class Basics{
public static void main(String args[]){
   
int x=10;
int y=20;
System.out.println(x++ + ++y);
}
}          Output-31

