public class Basics{
public static void main(String args[]){   
 int var1=5;
 int var2=6;
 if((var2=1)==var1){
  System.out.print(var2);
 }
else{
  System.out.print(var2+1);
}
}
}
                     output- 2 // latest value of var2 is 1 and 1+1 is 2.
