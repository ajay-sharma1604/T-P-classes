import java.util.*;
public class Basics{
  public static void pattern2(int n){
    for(int i=1;i<=n;i++){
      int k=i;
      for(int j=i;j<=n;j++){
        System.out.print(k);
      }
      System.out.println();
    }
  }
public static void main(String args[]){
  Scanner sc =new Scanner(System.in);
  System.out.println("Please enter input");
  int n=sc.nextInt();
  pattern2(n);
}
}
