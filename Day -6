import java.util.*;
public class Basics{
  public static void pattern3(int n){

    for(int i=1;i<=n;i++){
   
      for(int j=1;j<=n-i+1;j++){
            int k=j;
      
        System.out.print(k);
       
      }
      System.out.println();
    }
  }
public static void main(String args[]){
  Scanner sc =new Scanner(System.in);
  System.out.println("Please enter input");
  int n=sc.nextInt();
  pattern3(n);
}
}

