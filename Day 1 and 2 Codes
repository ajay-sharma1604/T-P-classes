 class explanations.......
  
public class Basics{

  public static void main(String args[]){
   
     float f=3.45F;    //F or f both are valid     
     double d =3.56;    //By default double is considered if no written without F or f
     boolean r=true;
     System.out.println(f);
     System.out.println(d);
     System.out.println(r);
     int i='c';
     System.out.println(i);
}

}
