import java.util.*;
public class Basics{

  public static void main(String args[]){
     Scanner sc=new Scanner(System.in);
     int a=sc.nextInt();
     int b=sc.nextInt();
     System.out.println("Sum=" + (a+b));
  }
}



public class Basics{
  public static void main(String args[]){
   
     int a=10;
     int b=20;
     int c=a+b;
     System.out.println(c);
     
}
}






