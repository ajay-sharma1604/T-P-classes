question 4: Check given no is prime or not

import java.util.*;
public class Basics{
  public static void main(String args[]){
 Scanner sc =new Scanner(System.in);
 System.out.println("Enter input");
 int n=sc.nextInt();
 int d=2;
 while(d<=n-1){
  if(n%d==0){
    System.out.println("Not a prime no");
    return;
  }
  d=d+1;
 }
 System.out.println("Prime no");
  }
}
                                                                ************  or *****************

import java.util.*;
public class Basics{
  public static void main(String args[]){
 Scanner sc =new Scanner(System.in);
 System.out.println("Enter input");
 int n=sc.nextInt();
 int d=2;
 while(d<=(n-1)/2){
  if(n%d==0){
    System.out.println("Not a prime no");
    return;
  }
  d=d+1;
 }
 System.out.println("Prime no");
  }
}
